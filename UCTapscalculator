
package uctcalculatoraps;

import javax.swing.JOptionPane;

/**
 *
 * @author Lukhanyo Mweli
 * 
 */
public class UCTCalculatorAPS {

    
    public static void main(String[] args) {
        String subject1;
        subject1 = JOptionPane.showInputDialog("Enter subject 1: ");
        String sub1 = subject1;
         subject1 = JOptionPane.showInputDialog("Enter subject 1 percentage : ");
         int a = Integer.parseInt(subject1);
         
         String subject2;
        subject2 = JOptionPane.showInputDialog("Enter subject 2: ");
        String sub2 = subject2;
         subject2 = JOptionPane.showInputDialog("Enter subject 2 percentage : ");
         int b = Integer.parseInt(subject2);
          
          String subject3;
        subject3 = JOptionPane.showInputDialog("Enter subject 3: ");
        String sub3 = subject3;
         subject3 = JOptionPane.showInputDialog("Enter subject 3 percentage : ");
         int c = Integer.parseInt(subject3);
         
          String subject4;
        subject4 = JOptionPane.showInputDialog("Enter subject 4: ");
        String sub4 = subject4;
         subject4 = JOptionPane.showInputDialog("Enter subject 4 percentage : ");
         int d = Integer.parseInt(subject4);
           
          String subject5;
        subject5 = JOptionPane.showInputDialog("Enter subject 5: ");
        String sub5 = subject5;
         subject5 = JOptionPane.showInputDialog("Enter subject 5 percentage : ");
         int e = Integer.parseInt(subject5);
         
          String subject6;
        subject6 = JOptionPane.showInputDialog("Enter subject 6: ");
        String sub6 = subject6;
         subject6 = JOptionPane.showInputDialog("Enter subject 6 percentage : ");
         int f = Integer.parseInt(subject6);
         
         
         //Disadvantage factor not accounted for
         int WPS =  a + b + c + d + e + f ; 
         
         String message = "Your WPS is :" + WPS;
         
         System.out.println(message);
         
         System.out.println(" ");
         System.out.println("These are the programmes you qualify for :");
         System.out.println("----------------------------------");
         
         if(WPS >= 420){
             System.out.println("Agricultural Science");
         }else if(WPS >= 450){
             System.out.println("Acturial Science");
         
         }  
       
    }
    
}
